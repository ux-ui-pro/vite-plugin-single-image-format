{
  "compilerOptions": {
    "isolatedModules": true,
    "target": "ES2022",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "noImplicitAny": true,
    "lib": ["ES2022"]
  },
  "include": ["src", "vite-env.d.ts", "vite.config.ts"]
}
